<html>
  <body>
    <%- include('common/header.ejs') %>
    <div class="container empty-background">
      <nav class="nav">
        <p class="title">용계역 여행</p>
        <div class="sub-title">코스 리스트</div>
      </nav>

      <div class="content-container">
        <!-- 코스 리스트 아이콘 -->
        <ul id="courseWrap" class="course-nav-ul">
          <!-- 추가2 -->
          <% for (let i = 0; i < result.length; i++) { %>
            <li class="course" data-course-no="<%= result[i].course_no %>" data-course-latitude="<%= result[i].course_latitude %>" data-course-longitude="<%= result[i].course_longitude %>">
              <p><%= result[i].course_name %></p>
            </li>
          <% } %>
            <li id="myPosition" class="course on" data-course-no="0">나의 위치</li>
        </ul>
        <!-- 카카오 지도 -->
        <div id="location-map"></div>
      </div>
    </div>
    <%- include('common/footer.ejs') %>
    <!-- 카카오 지도 api 사용 자바스크립트 파일 -->
    <script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=5ed2d7c240057d6a397168fc01e85086"></script>
    <script src="/js/course.js"></script>
  </body>
</html>
